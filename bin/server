#!/usr/bin/env php
<?php

use Psr\Http\Message\ServerRequestInterface;
use React\EventLoop\Factory;
use React\Http\Response;

require __DIR__ . '/../vendor/autoload.php';


$server = \EcomDev\CrossDomainSessionManager\HttpServerFactory::createServer();
$server->run(
    new \EcomDev\CrossDomainSessionManager\HttpServerSettings(
        isset($argv[1]) ? $argv[1] : '0.0.0.0:8888',
        isset($argv[2]) ? $argv[2] :'sharedSession'
    )
);
